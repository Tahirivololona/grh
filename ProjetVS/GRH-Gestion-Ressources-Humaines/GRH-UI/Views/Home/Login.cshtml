@model GRH_UI.Models.Login.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="fullscreen-bg">
<head>
    <title>Login | GRH</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    @Styles.Render("~/Scripts/assets/css/bootstrap.min.css")
    @Styles.Render("~/Scripts/assets/vendor/font-awesome/css/font-awesome.min.css")
    @Styles.Render("~/Scripts/assets/vendor/linearicons/style.css")
    @Styles.Render("~/Scripts/assets/css/main.css")
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Scripts/assets/img/logo-login.jpg">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Scripts/assets/img/logo-login.jpg">
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box ">
                    <div class="left">
                        <div class="content">
                            <div class="header">
                                <div class="logo text-center"><img src="~/Scripts/assets/img/logo-login.jpg" height="100" width="100" alt="Ministère energie Logo"></div>
                                <p class="lead">Veuillez vous connecter</p>
                                <p style="color:red;">@ViewBag.ErrorMessage</p>
                            </div>
                            <form class="form-auth-small" method="post" action="~/Home/Login">
                                <div class="form-group">
                                    <label for="signin-email" class="control-label">Adresse mail</label>
                                    <input type="email" name="Email" class="form-control" id="signin-email" value="" placeholder="Adresse mail">
                                </div>
                                <div class="form-group">
                                    <label for="signin-password" class="control-label">Mot de passe</label>
                                    <input type="password" name="Password" class="form-control" id="signin-password" value="" placeholder="Mot de passe">
                                </div>

                                <button class="btn btn-primary btn-lg btn-block " type="submit">SE CONNECTER</button>
                                <div class="bottom">
                                    <span class="helper-text"><i class="fa fa-lock"></i> <a href="#">Mot de passe oublié</a></span>
                                </div>
                                <br />
                                <div class="bottom">
                                    <span class="helper-text"><i class="fa fa-"></i> <a href="#"><u>S'inscrire</u></a></span>
                                </div>

                            </form>
                        </div>
                    </div>
                    <div class="right">
                        <div class="overlay"></div>
                        <div class="content text">
                            <h1 class="heading"></h1>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>

</html>
